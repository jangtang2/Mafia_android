<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:elevation="20dp">

    <ImageView
        android:id="@+id/day_night"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_night"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/yourRole"
        android:orientation="horizontal"
        android:background="@color/gray2"
        app:layout_constraintTop_toBottomOf="@id/day_night">

        <TextView
            android:id="@+id/yourRole_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신은 "
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="25dp"/>

        <TextView
            android:id="@+id/yourRole_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="25dp"/>

        <TextView
            android:id="@+id/yourRole_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 입니다."
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="25dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구의 접속상태"
        android:textSize="15dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/yourRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="20dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/mcButton"
        app:layout_constraintTop_toBottomOf="@id/connectButton"/>

    <LinearLayout
        android:id="@+id/mcButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@color/gray">
        <Button
            android:id="@+id/day_night_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="낮/밤 전환"
            app:cornerRadius="30dp"
            android:elevation="15dp"/>
        <Button
            android:id="@+id/kill"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="죽은 사람 알리기"
            app:cornerRadius="30dp"
            android:elevation="15dp"/>
        <Button
            android:id="@+id/end_game"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="게임 종료"
            app:cornerRadius="30dp"
            android:elevation="15dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>