<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainChatActivity"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/day_night"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_night"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/yourRole"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/day_night">

        <TextView
        android:id="@+id/yourRole_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray2"
        android:text="당신은 "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:elevation="25dp"/>

        <TextView
            android:id="@+id/yourRole_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="25dp"/>

        <TextView
            android:id="@+id/yourRole_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text=" 입니다."
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:elevation="25dp"/>

    </LinearLayout>



    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#ffffff"
        android:dividerHeight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/yourRole"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray2"
            android:hint="Input message"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#ff8800"
            android:onClick="clickSend"
            android:text="send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>